[Unit]
Description=Socat ipsec keydesk proxy port 443 %i

[Service]
Type=simple
SyslogIdentifier=socat-ipsec-keydesk-proxy-443

Environment="wgip=%i"

ExecStart=/bin/bash -c "echo '%i' | cut -d : -f 1 | xargs -I {} /usr/bin/ip netns exec ns{} /usr/bin/socat -d TCP4-LISTEN:8443,su=nobody,fork,range=100.0.0.0/8,reuseaddr TCP6:[${wgip#*:}]:443"
Restart=always

[Install]
WantedBy=multi-user.target
